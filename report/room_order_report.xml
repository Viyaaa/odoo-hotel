<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <template id="report_hotel_room_order">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="o">
        <t t-call="web.external_layout">
          <div class="page">
            <!-- Order Information -->
            <div class="row">
              <h1>Order Number:</h1>
              <h1 t-field="o.name" />
            </div>

            <div class="row">
              <h3>Order Date:</h3>
              <h3 t-field="o.date_order" />
            </div>
            
            <!-- Customer Information -->
            <div class="row">
              <div class="col-4">Customer Name: </div>
              <div class="col-4"><h5 t-field="o.cust_name" /></div>
            </div>
            <div class="row">
              <div class="col-4">Customer Phone Number: </div>
              <div class="col-4"><h5 t-field="o.phone_num" /></div>
            </div>
            <div class="row">
              <div class="col-4">Customer Email: </div>
              <div class="col-4"><h5 t-field="o.email" /></div>
            </div>
          </div>
        </t>
      </t>
    </t>
  </template>
</odoo>